<Window x:Class="ShopApp.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopApp"
        mc:Ignorable="d"
        Title="Okno hasła" Height="356" Width="346">
    <Grid Margin="0,0,2,-1">
        <Button x:Name="PasswordConfirm" Content="Zatwierdź" HorizontalAlignment="Left" Margin="36,153,0,0" VerticalAlignment="Top" Width="259" Height="61" Click="PasswordConfirm_Click" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
        <Label Content="       Wprowadź hasło uwierzytelniające" HorizontalAlignment="Left" Margin="20,45,0,0" VerticalAlignment="Top" Width="290" FontSize="14" FontWeight="Bold"/>
        <TextBox x:Name="PasswordText" HorizontalAlignment="Left" Height="32" Margin="36,94,0,0"  VerticalAlignment="Top" Width="259" TextAlignment="Center" />
        <Button Content="Zamknij okno" HorizontalAlignment="Left" Margin="36,237,0,0" VerticalAlignment="Top" Width="259" Height="54" Click="Button_Click" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>

    </Grid>
</Window>
